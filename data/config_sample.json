{
    "server" : "redis",
    "port" : "6379",

# inbound redis channels, where we subscribed
    "channels": [
        "craniac",
    ],

# should we fork() and become unix daemon?
    "daemonize": 1,

# caches and other data goes there
    "cachedir" : "data/cache",
    "braindir" : "data/brains",

    # unprivileged system user to run bot as
    "user" : "nobody",

# logs goes there
    "log" : "/var/log/aleesa-craniac/aleesa-craniac.log",
    "loglevel": "info",

# ditto
    "pid" : "/var/run/aleesa-craniac/aleesa-craniac.pid"
}
