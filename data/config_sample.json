{
# server address
    "server" : "redis",
    "port" : "6379",

# should we fork() and become unix daemon?
    "daemonize": 1,

# where caches go there
    "cachedir" : "data/cache",

# unprivileged system user to run bot as
    "user" : "nobody",

# logs goes there
    "log" : "/var/log/aleesa-craniac/aleesa-craniac.log",
    "loglevel": "notice",

# ditto
    "pid" : "/var/run/aleesa-craniac/aleesa-craniac.pid",
}
